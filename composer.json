{
    "name": "popphp/pop-filter",
    "description": "Pop Filter Component for Pop PHP Framework",
    "keywords": [
        "filter",
        "string",
        "string filter",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-filter",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "popphp/pop-utils" : "^2.1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Filter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Filter\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
